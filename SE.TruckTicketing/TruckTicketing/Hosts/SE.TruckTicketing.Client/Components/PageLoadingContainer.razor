@inherits BaseRazorComponent

@if (IsLoading)
{
    <div class="d-flex justify-content-center m-5">
        @if (LoadingView is not null)
        {
            @LoadingView
        }
        else
        {
            <div class="spinner-border text-primary"
                 role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        }
    </div>
}
else
{
    @LoadedView
}
