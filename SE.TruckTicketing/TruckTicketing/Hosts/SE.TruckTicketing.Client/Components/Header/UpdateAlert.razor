@if (ShowAlert)
{
    <div class="flex align-items-center justify-content-between px-4 py-2 bg-warning">
        <p>An updated version of the application is now available, please reload to access new features and improvements.</p>
        <button onclick="window.location = window.location"
                class="btn btn-link text-decoration-none">
            Reload
        </button>
    </div>
}
