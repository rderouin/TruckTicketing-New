@using SE.TruckTicketing.Contracts.Models.Operations

@inherits BaseRazorComponent
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <div class="d-flex gap-2 align-items-start">
            <h3 class="fw-bold">Hold Status Reasons</h3>
        </div>
        <div class="d-flex gap-2 align-items-end">
            <RadzenButton Click=@(args => OpenHoldReasonEditDialog())
                          Text="Add Hold Reason"
                          ButtonStyle="ButtonStyle.Primary"
                          Size="ButtonSize.Medium"
            />
        </div>
    </div>
    <div class="card-body grid-switch-container">
        <PagableGridView TModel="TruckTicketHoldReason" 
                         @ref="_grid"
                         Results="@_results"
                         class="bs-class"
                         EnableSearch="false"
                         EnablePaging="false"
                         EnableSorting="true"
                         OnDataLoad="LoadData"
                         EnableRowExpansion="false"
                         EnableFilters="false">
            <Columns>
                <ColumnDefinition TItem="TruckTicketHoldReason"
                                  Property="@nameof(TruckTicketHoldReason.HoldReason)"
                                  Title="Hold Reason"
                                  PropertyType="typeof(string)">
                </ColumnDefinition>
                <ColumnDefinition TItem="TruckTicketHoldReason"
                                  Property="@nameof(TruckTicketHoldReason.IsDeleted)"
                                  Title="Deleted"
                                  PropertyType="typeof(bool)">
                    <Template Context="context">
                        <RadzenSwitch @bind-Value="context.IsDeleted" class="grid-switch"
                                      Disabled="true">
                        </RadzenSwitch>
                    </Template>
                </ColumnDefinition>
                <ColumnDefinition TItem="TruckTicketHoldReason"
                                  Property="@nameof(TruckTicketHoldReason)"
                                  Title="Actions"
                                  Width="4rem"
                                  EnableSorting="false">
                    <Template Context="data">
                        <RadzenButton Click="() => OpenHoldReasonEditDialog(data)"
                                      ButtonStyle="ButtonStyle.Secondary"
                                      Size="ButtonSize.Small"
                                      Text="Edit"
                                      />
                    </Template>
                </ColumnDefinition>
            </Columns>
        </PagableGridView>
    </div>
</div>
